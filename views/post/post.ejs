<% include ../layout/header.ejs %>

<div class="main">
    <div class="container">
        <div class="content">

            <div class="post">
                <div class="top">
                    <h2>
                        <%= post.title %>
                        <% if (post.owner.login === user.login || user.role === 'admin') { %>

                        <a style="color: black;text-decoration: none;" href="/post/edit/<%= post.id %>">âœŽ</a>
                        <% } %>
                    </h2>
                </div>
                <div class="body">

                    <%- post.body %>

                </div>
                <div class="bottom">

                    <% if (post.status === 'moderated' && post.owner.login === user.login) { %>
                    <span class="moderated">
                currently being checked by the administrator.
              </span>
                    <% } %>
                    <div class="author">
                        Author:
                        <a href="/users/<%= post.owner.login %>">
                            <%= post.owner.login %>
                        </a>
                    </div>
                </div>
            </div>

            <div class="comments" id="<%= post.id %>">
                <h3>Comments:</h3>
                <div class="comment-list">
                    <%- include('../layout/comments.ejs', {items: comments}) %>

                    <% if(!user.id && !user.login) { %>
                    <p>
                        <i>Sign in to comment</i>
                    </p>
                    <% } else { %>
                    <form class="comment">
                        <textarea name="body"></textarea>
                        <div class="buttons">
                            <button class="cancel secondary">Cancel</button>
                            <button class="send">Send</button>
                        </div>
                    </form>
                    <% } %>

                </div>
            </div>


        </div>

        <% include ../layout/sidebar.ejs %>

    </div>
</div>

<% include ../layout/footer.ejs %>